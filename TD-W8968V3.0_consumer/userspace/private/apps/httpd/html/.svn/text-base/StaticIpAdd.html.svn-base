<html>
   <head>
      <meta HTTP-EQUIV='Pragma' CONTENT='no-cache'>
      <link rel="stylesheet" href='stylemain.css' type='text/css'>
         <link rel="stylesheet" href='colors.css' type='text/css'>
            <script language="javascript" src="util.js"></script>
            <script language="javascript">
<!-- hide
var editDhcpd = '<%ejGetOther(memInfo, editDhcpd)%>'.split('|');
var isEdit = (editDhcpd.length == 2);

function frmLoad() {
	if (isEdit) {
		with (document.forms[0]) {
			MacAddr.value = editDhcpd[0];
			IpAddr.value = editDhcpd[1];
		}
	}
}

function btnApply() {
   var loc = 'dhcpdstaticlease.cmd?action=add';
   if (isEdit) loc += '&edit=' + editDhcpd[0];
   with ( document.forms[0] ) {

      if (isValidIpAddress(IpAddr.value) == false) {
	      alert( 'Address "' + IpAddr.value + '" is invalid IP address.');
	      return;
      }
      else if (isValidMacAddress(MacAddr.value) == false) {
	      alert( 'Address "' + MacAddr.value + '" is invalid MAC address.');
	      return;
      }
      else {
	      loc += '&mac=' + MacAddr.value;
		  loc += '&static_ip=' + IpAddr.value;
		  loc += '&sessionKey=<%ejGetOther(sessionKey)%>';
   	      var code = 'location="' + loc + '"';
   	      eval(code);
      }
   }
}
// done hiding -->
</script>
   </head>
   <body onload="frmLoad()">
      <center>
         <form>
         	<table>
         		<tr><td class="h1" colspan='2'>DHCP Static IP Lease </td></tr>
         		<tr><td class="blue" colspan='2'></td></tr>
				<tr><td  colspan='2'>Enter the Mac address and Static IP address then click "Save/Apply" .</td></tr>
                <tr><td colspan="2">&nbsp;</td></tr>
               <tr>
                  <td width="180" class='item' >MAC Address:</td>
                  <td><input type='text' name='MacAddr'></td>
               </tr>
               <tr>
                  <td class='item' >IP Address:</td>
                  <td><input type='text' name='IpAddr'> </td>
               </tr>
                <tr><td class="blue" colspan="2"></td></tr>
            </table>
            <center>
               <input type='button' onClick='btnApply()' value='Save/Apply' class='buttonL'>
            </center>
         </form>
      </center>
   </body>
</html>

