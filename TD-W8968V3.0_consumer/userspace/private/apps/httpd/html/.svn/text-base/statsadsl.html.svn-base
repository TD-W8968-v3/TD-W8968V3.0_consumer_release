<html>
   <head>
      <meta http-equiv='Pragma' content='no-cache'>
      <link rel="stylesheet" href='stylemain.css' type='text/css'>
         <link rel="stylesheet" href='colors.css' type='text/css'>
            <script language="javascript">
<!-- hide
var DslBondingEnabled='<%ejGetOther(isDslBondingEnabled)%>';
var currLineNum='<%ejGet(bondingLineNum)%>';
function frmLoad() {
   var errMsg = '<%ejGetOther(memInfo, errMsg)%>';
   
   if ( errMsg != '&nbsp' )
      eval('location="statsadslerr.html"');
	  
   setTimeout('location.reload()', 15 * 1000);
}

function btnBerTest() {
   var code = 'location="berstart.tst?berState=1"';

   eval(code);

  // window_open('berstart.tst?berState=1', 'BCM963xxBerTest', options);
}

function btnReset() {
   var loc = 'statsadslreset.html';

   var code = 'location="' + loc + '"';
   eval(code);
}

function changeLineNum() {
   var loc = 'statsadsl.cgi?';   
   with ( document.forms[0] ) { 
       loc += 'bondingLineNum=' + lineNum.value;   
   }
   var code = 'location="' + loc + '"';
   eval(code);
}

function btnClose() {
   window.close();
}

// done hiding -->
      </script>
   </head>
   <body onLoad='frmLoad()'>
      <center>
         <form>
            <table>
			<tr><td class=h1>Statistics -- xDSL</td></tr>
			<tr><td class=blue></td></tr>
<script language="javascript">
            if ( DslBondingEnabled == 1 ) {
               document.write("<tr><td>Bonding Line Selection:  <select size=\"1\" name=\"lineNum\" onChange='changeLineNum()'> \n");
               if ( currLineNum == 0 ) {
                   document.write("<option value=\"0\" selected=\"1\"> line 0 \n");
               } else {
                   document.write("<option value=\"0\"> line 0 \n");
               }
               if ( currLineNum == 1 ) {
                   document.write("<option value=\"1\" selected=\"1\"> line 1 \n");
               } else {
                   document.write("<option value=\"1\"> line 1 \n");
               }
               document.write("</option> </select>\n</td></tr>");
            }
</script>
			<tr><td>
            <table border="1" cellpadding="2" cellspacing="0" style='width:100%'>
				<%ejGetOther(stsadslget, 0, 0)%>
            </table>
			</td></tr>
            <tr><td class=blue></td></tr>
			<tr><td>
			<center>
            <input type='button' onClick='btnBerTest()' class=buttonL value='xDSL BER Test'>
            <input type='button' onClick='btnReset()' class=buttonL value='Reset Statistics'>
			</center>
			</td></tr>
			</table>
         </form>
      </center>
   </body>
</html>
